rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Regras para upload de imagens
    match /images/{userId}/{allPaths=**} {
      // Permitir leitura para todos os usu치rios autenticados
      allow read: if request.auth != null;
      
      // Permitir upload apenas para usu치rios autenticados
      // O userId na URL deve corresponder ao usu치rio logado
      allow write: if request.auth != null 
        && request.auth.uid == userId
        && request.resource.size < 10 * 1024 * 1024 // M치ximo 10MB
        && request.resource.contentType.matches('image/.*'); // Apenas imagens
    }
  }
}
