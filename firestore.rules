rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Regras para a coleção de imagens
    match /images/{imageId} {
      // Permitir leitura para todos os usuários autenticados
      allow read: if request.auth != null;
      
      // Permitir criação para usuários autenticados (upload de imagens)
      allow create: if request.auth != null;
      
      // Permitir atualização para qualquer usuário autenticado (temporário para debug)
      allow update: if request.auth != null;
      
      // Permitir exclusão APENAS pelo dono da imagem
      allow delete: if request.auth != null 
        && request.auth.uid == resource.data.userId;
    }
    
    // Regras para usuários (se necessário)
    match /users/{userId} {
      allow read, write: if request.auth != null 
        && request.auth.uid == userId;
    }
  }
}